<br>

<button type="button" id="hlo" onclick="add()">adding 10 and 10 using document.write function</button>

    <script>

      function addnumber() {
        document.getElementById("hi").innerHTML = (5+6);
      }

      function add(){
        document.getElementById("hlo").innerHTML = document.write(10+10);  //document.write garyo bhane naya webpage ma janxa (here 20 will be displayed in a new fresh page)
      }
    </script>

    
